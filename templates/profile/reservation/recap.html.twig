{% extends 'base.html.twig' %}

{% block title %}Recapitulatif
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-md-6 mb-5 mb-md-0">
			<h2 class="h3 mb-3 text-black">Mode de paiement</h2>

			<div class="p-3 p-lg-5 border">

				

				<div class="form-check">
					<h2 class="text"style="color:#1A237E">Mode de paiement</h2>
				    <input type="radio" class="form-check-input" style="color:#1A237E" checked>
					<label  class="form-check-label d-flex justify-content-between">
					    {% if method =="stripe" %}
					    <span class="d-block fs-base text-dark fw-medium mb-1" >{% set name ="carte bancaire" %}{{name}}</span>
						{% else %}
						 <span class="d-block fs-base text-dark fw-medium mb-1" >{{ method }}</span>
						{% endif %}
					</label>
				</div>		
			</div>
		</div>


		<div class="col-md-6">


			<div class="row mb-5">
				<div class="col-md-12">
					<h2 class="h3 mb-3 text-black" style="color:#1A237E"> Recapitulatif de Votre Reservation : Reference - {{reference}}</h2>
					<div class="p-3 p-lg-5 border">
						

						{% if method == 'stripe' %}
                        <form method="POST" action="{{ path('payment_stripe', {reference: reference}) }}">
							<input type="submit" class="btn text-white " style="background-color:#1A237E" value="Payer par carte bancaire| {{ price }} $">
						</form>
                        {% else %}

                        <form method="POST" action = "{{ path('payment_paypal', {reference: reference}) }}">
							<input type="submit" class="btn text-white" style="background-color:#1A237E" value="Payer par Paypal| {{ price }} MAD">
						</form>
                        {% endif %}
                        

					</div>
				</div>
			</div>

		</div>
        
	</div>
	<!-- </form> -->
</div></div>{% endblock %}
